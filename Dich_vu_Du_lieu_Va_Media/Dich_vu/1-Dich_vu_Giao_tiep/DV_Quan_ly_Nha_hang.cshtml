        }
        else if (Ma_so_Xu_ly == "CAP_NHAT_GIA_BAN")
        {
            var Ma_so_Mon_an = Request["Ma_so_Mon_an"];
            var Gia_moi = Request["Gia_moi"];
            Chuoi_Kq = Du_lieu.Cap_nhat_Gia_ban(Ma_so_Mon_an, Gia_moi);
