            Chuoi_Kq = Du_lieu.Cap_nhat_Trang_thai_Phieu_Dat_ban(Ma_so_Phieu_Dat_ban, Trang_thai);
        }
    }

    Response.ContentType = "text/json";
    Response.Write(Chuoi_Kq);
}